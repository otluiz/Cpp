#include <iostream>
using namespace std;


void cellCompete( int *arr, int days )
{
    int num = 0;
    int len = sizeof(&arr) / sizeof(&arr[0]);

    for( int i = 0; i < len; i++ )
    {
        num = ( num << 1 ) | arr[i];
    }

    for( int i = 0; i < days; i++ )
    {
        num = num << 1;
        num = ( ( ( num << 1 ) ^ ( num >> 1 ) ) >> 1 ) & 0xFF;
    }

    for( int i = 0; i < len; i++ )
    {
        arr[i] = ( num >> 7 - i ) & 0x01;
    }
}

int main()
{
    int arr[8] = { 1, 0, 0, 0, 0, 1, 0, 0};
    cellCompete( arr, 2 );
    for(int i = 0; i < arr.size; ++i)
      cout << arr[i] << " ";

    cout << endl;
}
